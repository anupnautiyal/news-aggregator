<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Top Headlines</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <section class="hero">
    <div class="container">
      <h1>Top Headlines</h1>
      <p class="lead">Latest updates from around the world</p>
    </div>
  </section>

  <main class="container grid">
    <% if (news && news.length) { %>
      <% news.forEach(article => { %>
        <article class="card">
          <% if (article.urlToImage) { %>
            <a class="card-image" href="<%= article.url %>" target="_blank">
              <img src="<%= article.urlToImage %>" alt="<%= article.title %>" />
            </a>
          <% } %>
          <div class="card-body">
            <span class="badge"><%= article.category || '' %></span>
            <h3 class="card-title"><a href="<%= article.url %>" target="_blank"><%= article.title %></a></h3>
            <p class="card-desc"><%= article.description || '' %></p>
            <div class="card-meta"><small><%= article.source?.name %> â€¢ <%= new Date(article.publishedAt).toLocaleString() %></small></div>
          </div>
        </article>
      <% }) %>
    <% } else { %>
      <p>No articles found.</p>
    <% } %>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
